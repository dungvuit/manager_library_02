<header class="navbar navbar-fixed-top" id="header">
  <div class="container">
    <div class="brand side-left col-xs-2">
      <%= link_to image_tag("logo.png", size: Settings.size_logo), root_path %>
    </div>
    <nav class="side-right col-xs-10">
      <div class="form-search">
        <%= form_for :search, url: "#" do |f| %>
          <%= f.text_field :name, placeholder: t("views.header.placeholder") %>
        <% end %>
      </div>
      <ul class="nav navbar-nav navbar-right list-item">
        <% if logged_in? && current_user.is_admin? %>
          <li><%= link_to t("views.header.admin"), admins_users_path %></li>
          <li><%= link_to t("views.header.home"), "#" %></li>
          <li><%= link_to t("views.header.mybook"), "#" %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= current_user.name %> <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to t("views.header.profile"), current_user %></li>
              <li><%= link_to t("views.header.setting"), edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li>
                <%= link_to t("views.header.logout"), logout_path, method: "delete" %>
              </li>
            </ul>
          </li>
        <% elsif logged_in? %>
          <li><%= link_to t("views.header.home"), "#" %></li>
          <li><%= link_to t("views.header.mybook"), "#" %></li>
          <li><%= link_to t("views.header.list_book"), books_path %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= current_user.name %> <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to t("views.header.profile"), current_user %></li>
              <li><%= link_to t("views.header.setting"), edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li>
                <%= link_to t("views.header.logout"), logout_path, method: "delete" %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t("views.header.home"), "#" %></li>
          <li><%= link_to t("views.header.list_book"), books_path %></li>
          <li><%= link_to t("views.header.login"), login_path %></li>
        <% end %>
      </ul>
    </nav>
    <div class="clearfix"></div>
  </div>
</header>
