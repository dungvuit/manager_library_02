<% provide :title, t("views.users.show_book") %>
<div class="main-content">
  <div class="container">
    <div class="info-manager">
      <div class="title-manager pull-left">
        <h2><%= t "views.users.show_book" %></h2>
      </div>
      <div class="button-manager pull-right">
        <ul>
          <li>
            <%= link_to new_admins_book_path do %>
              <i class="glyphicon glyphicon-plus"></i>
              <%= t "views.user.create" %>
            <% end %>
          </li>
          <li>
            <%= link_to admins_books_path(format: "xls") do %>
              <i class="glyphicon glyphicon-export"></i>
              <%= t "views.user.export" %>
            <% end %>
          </li>
        </ul>
      </div>
      <div class="clearfix"></div>
    </div>
    <div class="row wrap-search">
      <div class="col-md-6 col-md-offset-6">
        <%= form_tag admins_books_path, method: :get, remote: true do %>
          <div class="form-group pull-right">
            <%= select_tag :category_id, options_for_select(@supports.categories) %>
            <%= submit_tag t("views.search"), class: "btn btn-success" %>
          </div>
        <% end %>
      </div>
    </div>
    <div class="table-responsive">
      <table class="table table-bordered table-hover">
        <%= render "list_book" %>
      </table>
      <div class="pagination">
        <%= will_paginate %>
      </div>
    </div>
  </div>
</div>
