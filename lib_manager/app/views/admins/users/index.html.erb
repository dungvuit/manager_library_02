<% provide :title, t("views.users.show") %>
<div class="main-content">
  <div class="container">
    <div class="info-manager">
      <div class="title-manager pull-left">
        <h2><%= t "views.users.show" %></h2>
      </div>
      <div class="button-manager pull-right">
        <ul>
          <li>
            <%= link_to new_admins_user_path do %>
              <i class="glyphicon glyphicon-plus"></i>
              <%= t "views.user.create" %>
            <% end %>
          </li>
          <li>
            <%= link_to admins_users_path(format: "xls") do %>
              <i class="glyphicon glyphicon-export"></i>
              <%= t "views.user.export" %>
            <% end %>
          </li>
        </ul>
      </div>
      <div class="clearfix"></div>
    </div>
    <div class="row wrap-search">
      <div class="col-md-6 col-md-offset-6">
        <%= form_tag admins_users_path, method: :get, remote: true do %>
          <div class="form-group pull-right">
            <%= radio_button_tag :search_by_permision, "t" %>
            <%= t "views.form.radio_admin" %>
            <%= radio_button_tag :search_by_permision, "f" %>
            <%= t "views.form.radio_user" %>
            <%= text_field_tag :search, params[:search], placeholder: t("views.input.value") %>
            <%= submit_tag t("views.search"), class: "btn btn-success" %>
          </div>
        <% end %>
      </div>
    </div>
    <div class="table-responsive">
      <table class="table table-bordered table-hover">
        <%= render "list_user" %>
      </table>
      <div class="pagination">
        <%= will_paginate %>
      </div>
    </div>
  </div>
</div>
