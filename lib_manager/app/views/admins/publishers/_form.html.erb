<div class="row">
  <div class="col-md-3"></div>
  <div class="col-md-6">
    <div class="form-group row">
      <div class="col-md-4">
        <%= f.label :name, t("views.form_publisher.name"),
          class: "col-form-label" %>
      </div>
      <div class="col-md-6">
        <%= f.text_field :name, class: "form-control" %>
      </div>
    </div>
    <div class="form-group row">
      <div class="col-md-4">
        <%= f.label :address, t("views.form_publisher.address"),
          class: "col-form-label" %>
      </div>
      <div class="col-md-6">
        <%= f.text_field :address, class: "form-control" %>
      </div>
    </div>
    <div class="form-group row">
      <div class="col-md-4">
        <%= f.label :phone, t("views.form_publisher.phone"),
          class: "col-form-label" %>
      </div>
      <div class="col-md-6">
        <%= f.text_field :phone, class: "form-control" %>
      </div>
    </div>
    <div class="form-group row">
      <div class="col-md-4">
        <%= f.label :description, t("views.form_publisher.des"),
          class: "col-form-label" %>
      </div>
      <div class="col-md-6">
        <%= f.text_area :description, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-md-6 col-md-offset-4">
        <%= f.submit yield(:button_text), class: "btn btn-success" %>
      </div>
    </div>
  </div>
</div>
