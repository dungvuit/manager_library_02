<% provide :title, t("views.user.edits.edit_publisher") %>
<% provide :button_text, t("views.user.edits.save") %>
<div class="main-content">
  <div class="container">
    <div class="info-manager">
      <div class="title-manager pull-left">
        <h2><%= t "views.user.edits.edit_publisher" %></h2>
      </div>
      <div class="button-manager pull-right">
        <ul>
          <li>
            <%= link_to admins_create_publisher_path do %>
              <i class="glyphicon glyphicon-plus"></i>
              <%= t "views.user.create" %>
            <% end %>
          </li>
          <li>
            <%= link_to "#" do %>
              <i class="glyphicon glyphicon-export"></i>
              <%= t "views.user.export" %>
            <% end %>
          </li>
        </ul>
      </div>
      <div class="clearfix"></div>
    </div>
    <div class="form-wrap">
      <%= form_for @publisher, url: admins_publisher_path do |f| %>
        <%= render "shared/error_messages", object: f.object %>
        <%= render "form", f: f %>
      <% end %>
    </div>
  </div>
</div>
