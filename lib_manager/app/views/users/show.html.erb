<% provide :title, @user.name %>
<div id="user-show">
  <div class="user-profile col-xs-3">
    <div class="avatar">
      <%= image_for @user %>
    </div>
    <div class="name">
      <span><%= t "views.user.shows.name" %></span>
      <%= @user.name %>
    </div>
    <div class="address">
      <span><%= t "views.user.shows.address" %></span>
      <%= @user.address %>
    </div>
    <section class="stats">
      <%= render "shared/stats", object: @user %>
    </section>
    <div class="form-follow">
      <%= render "follow_form" %>
    </div>
  </div>
  <div class="user-content col-xs-9">
    <ul class="nav nav-tabs">
      <li class="active">
        <a data-toggle="tab" href="#home"><%= t "views.users.shows.borrow_book" %></a>
      </li>
      <li>
        <a data-toggle="tab" href="#tab1"><%= t "views.users.shows.book_followed" %></a>
      </li>
      <li>
        <a data-toggle="tab" href="#tab2"><%= t "views.users.shows.user_followed" %></a>
      </li>
      <li>
        <a data-toggle="tab" href="#tab3"><%= t "views.users.shows.author_followed" %></a>
      </li>
    </ul>
    <div class="tab-content">
      <div id="home" class="tab-pane fade in active">
        <div class="borrow-book">
          <div class="title">
            <h3><%= t "views.users.shows.list_book_borrowing" %></h3>
          </div>
          <div class="list-book">
            <%= render "list_book" %>
          </div>
        </div>
      </div>
      <div id="tab1" class="tab-pane fade">
        <div class="following-books">
          <div class="title">
            <h3><%= t "views.users.shows.list_book_following" %></h3>
          </div>
          <div class="list-books">
            <%= render "list_book_following" %>
            <% will_paginate @books %>
          </div>
        </div>
      </div>
      <div id="tab2" class="tab-pane fade">
        <div class="user-follow">
          <div class="title">
            <h3><%= t "views.users.shows.user_follow" %></h3>
          </div>
          <%= render "user_follow" %>
        </div>
      </div>
      <div id="tab3" class="tab-pane fade">
        <div class="author-followed">
          <div class="title">
            <h3><%= t "views.users.shows.author_followed" %></h3>
          </div>
          <%= render "author_followed" %>
        </div>
      </div>
    </div>
  </div>
  <div class="clearfix">
  </div>
</div>
